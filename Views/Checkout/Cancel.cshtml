@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="text-warning display-1 mb-4">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <h2 class="text-warning mb-3">Payment Cancelled</h2>
                    <p class="text-muted mb-4">
                        Your payment was cancelled and no charges were made to your account.
                        Your cart items are still saved for you.
                    </p>

                    <div class="alert alert-info mb-4" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        You can complete your purchase anytime by returning to your cart.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-primary me-md-2">
                            <i class="fas fa-shopping-cart me-2"></i>Return to Cart
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .display-1 {
        font-size: 4rem;
    }

    @@media (max-width: 768px) {
        .display-1 {
            font-size: 3rem;
        }

        .card-body {
            padding: 2rem 1.5rem !important;
        }
    }
</style>
