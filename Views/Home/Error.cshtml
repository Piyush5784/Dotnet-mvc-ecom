@using VMart.Models.ViewModels
@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="text-center py-5">
    <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
    <p class="text-muted">We’re sorry, but an unexpected error occurred.</p>

    @if (!string.IsNullOrEmpty(Model?.RequestId))
    {
        <p><strong>Error Reference:</strong> @Model.RequestId</p>
    }

    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Go back home</a>
</div>
